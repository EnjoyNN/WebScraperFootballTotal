            <CheckBox Grid.Row="0" Grid.Column="5" x:Name="cbSecondTimeInAllTotalUnder15" 
                      Content="&lt; 1,5 2-й Тайм Всего" IsChecked="False"/>
            <CheckBox Grid.Row="1" Grid.Column="5" x:Name="cbSecondTimeInHomeTotalUnder15" 
                      Content="&lt; 1,5 2-й Тайм Дома" IsChecked="False"/>
            <CheckBox Grid.Row="2" Grid.Column="5" x:Name="cbSecondTimeInAwayTotalUnder15" 
