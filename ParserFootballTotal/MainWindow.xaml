        <ProgressBar Grid.Row="3" x:Name="progrssBarMain" Height="25" Margin="10,45,10,10"  
                     Foreground="#FF63C8F1"/>

        <Button Grid.Row="3" x:Name="buttonSearchSettings" Margin="10,0,0,55" 
                HorizontalAlignment="Left" Width="144" Height="40" BorderBrush="Black" 
                Background="White" Click="buttonSearchSettings_Click">
            <TextBlock Style="{StaticResource textBlockStyle}" TextAlignment="Center">Настройки поиска</TextBlock>
        </Button>

        <Button Grid.Row="3" x:Name="buttonStartThreeDays" HorizontalAlignment="Right" 
                Margin="0,0,10,55" Width="210" Height="40" BorderBrush="Black" 
