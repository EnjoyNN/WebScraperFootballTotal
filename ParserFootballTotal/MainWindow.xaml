        <Grid Name="ToolBar" Background="Transparent" Grid.Row="0" MouseDown="ToolBar_MouseDown">
            <!--косметическая шапка-->
            <Polygon Fill="White" Opacity="0.4"
                 Points="100,0,
                 110,20,
                 900,20,
                 910,0"/>

            <Image Name="logoPng" Source="Source/logoBlackFill.png" Height="25" Width="285">
            </Image>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                
                <Image Name="buttonMin" Height="15" Width="15" Margin="0,2,15,0" MouseDown="buttonMin_MouseDown">
                    <Image.Style>
                        <Style TargetType="{x:Type Image}">
                            <Setter Property="Source" Value="Source/buttonMinNonActivePFT.png"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsMouseOver,
                                                              ElementName=buttonMin}"
                                             Value="True">
                                    <Setter Property="Source"
                                            Value="Source/buttonMinActivePFT.png"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>

                    <Image.Effect>
                        <BlurEffect Radius="1"/>
                    </Image.Effect>
                </Image>

                <Image Name="buttonX" Height="15" Width="15" Margin="0,2,10,0" MouseDown="buttonX_MouseDown">
                    <Image.Style>
                        <Style TargetType="{x:Type Image}">
                            <Setter Property="Source" Value="Source/buttonXNonActivePFT.png"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsMouseOver,
                                                              ElementName=buttonX}"
                                             Value="True">
                                    <Setter Property="Source"
                                            Value="Source/buttonXActivePFT.png"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>

                    <Image.Effect>
                        <BlurEffect Radius="1"/>
                    </Image.Effect>
                </Image>

